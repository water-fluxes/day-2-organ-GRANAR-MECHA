<?xml version="1.0" encoding="utf-8"?>
<granar>
	<!-- General parameters -->
	<planttype param="1" /> <!-- 1 = monocot / 2 = dicot -->
	<randomness param="2" /> <!-- 0 = no radomness / 3 = high randomness-->
	<secondarygrowth param="0"/>
	
	<!-- Stele layers -->
	<!-- Order defines the ranking of the tissue radialy -->
	<!-- cell_diameter = cell width [mm]; layer_diameter = diameter of the stele  -->
	<stele cell_diameter="0.018" n_layers="1" layer_diameter = "0.672" order="1"/>
	<pericycle cell_diameter="0.015" n_layers="1"  order="2"/>
	<endodermis cell_diameter="0.015" n_layers="1"  order="3"/>
	<!-- Cortex layers -->
	<!-- n_layer = number of layer -->
	<inner_cortex cell_diameter="0.03" n_layers="1"  order="1"/>
	<cortex cell_diameter="0.05" n_layers="6"  order="4"/>
	<outer_cortex cell_diameter="0.03" n_layers="1"  order="1"/>
	<exodermis cell_diameter="0.03" n_layers="1" order="7"/>
	<epidermis cell_diameter="0.016" n_layers="1" order="8"/>

	<!-- Vessels-->
	<!-- max_size = maximum cell diameter  [mm] -->
	<!-- n_files = number of metaxylem elements -->
	<!-- ratio = ratio of proto vs. metaxylem elements -->
	<xylem max_size="0.120" n_files="9" order="1.5" ratio ="3.1" />
	<phloem max_size="0.01" n_files="3" n_layers = "0"/>
	
	<!-- Other cell types -->
	<aerenchyma proportion="0.02" n_files="6" type = "1" /> <!-- 1 = strip / 2 = patch -->
	<hair length = "0.07" n_files="0" />
    <pith layer_diameter="0.250" cell_diameter="0.03"/>

</granar>